{
    "manifestVersion": 1,
    "id": "arieleas-workitemupdater",
    "version": "1.0.3",
    "name": "WorkItem Updater X",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Update the state of work items linked to a build.",
    "baseUri": "https://localhost",
    "publisher": "ArielEAS",
    "public": false,
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "WorkItem",
        "DevOps",
        "State",
        "Fields",
        "Relation",
        "Build",
        "Build task",
        "Release",
        "Release task"
    ],
    "links": {
        "getstarted": {
            "uri": "https://github.com/domenicr/WorkItemUpdater/blob/master/src/overview.md"
        },
        "issues": {
            "uri": "https://github.com/domenicr/WorkItemUpdater/issues"
        },
        "repository": {
            "uri": "https://github.com/domenicr/WorkItemUpdater"
        }
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "branding": {
        "color": "rgb(141, 141, 141)",
        "theme": "light"
    },
    "files": [
        {

            "path": "img",
            "addressable": true
        },
        {
            "path": "WorkItemUpdater"
        }
    ],
    "categories": [
        "Azure Boards, Azure Pipelines"
    ],
    "contributions": [
        {
            "id": "bluebasher-workitemupdater",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "type": "ms.vss-distributed-task.task",
            "properties": {
                "name": "WorkItemUpdater"
            }
        }
    ]
}
